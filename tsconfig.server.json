{
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "outDir": "dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true
    },
    "include": [
      "server.ts",
      "server/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      ".next",
      "app"
    ]
  }